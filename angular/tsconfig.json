{
  "compilerOptions": {
    "watch":true,
    "lib": ["esnext","dom", "dom.iterable"],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "es2016",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}